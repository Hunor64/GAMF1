<Window x:Class="GAMF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GAMF1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="countButton" Click="CountButton_Click">Számol</Button>
            <TextBlock x:Name="resultTextBlock"></TextBlock>
            <Button x:Name="btnSzamol" Click="btnSzamol_Click" Content="Számol" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtEredmeny" TextAlignment="Center" FontSize="16"/>
            <Button x:Name="readButton" Content="Számok Olvasása" Click="ReadButton_Click"/>
            <TextBlock x:Name="resultText" Text="Eredmény jelenik meg itt" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="GAMF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GAMF1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Width="100px" Height="25px" x:Name="countButton" Click="CountButton_Click">Számol</Button>
            <TextBlock Height="25px" Width="300px" x:Name="resultTextBlock" TextAlignment="Center" FontSize="16"></TextBlock>
            <Button Width="100px" Height="25px" x:Name="btnSzamol" Click="btnSzamol_Click" Content="Számol" HorizontalAlignment="Center"/>
            <TextBlock Width="300px" Height="25px" x:Name="txtEredmeny" TextAlignment="Center" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
